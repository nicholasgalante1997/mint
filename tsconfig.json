{
    "compilerOptions": {
      "target": "es2017",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2017"
      ],
      "jsx": "react-jsx",
      "module": "commonjs",
      "rootDir": ".",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "typeRoots": [
        "node_modules/@types"
      ],
      "resolveJsonModule": true,
      "declaration": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": ["src", "build.tsx"],
    "exclude": ["node_modules"]
  }